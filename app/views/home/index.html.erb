<!-- HERO SECTION — Cinematic + Glass -->
<section class="pt-40 pb-32 px-6 text-center text-white glass-dark max-w-7xl mx-auto mt-20">
  <h1 class="font-cinzel text-6xl md:text-7xl font-bold text-cinematico-gold tracking-wide">
    CINEMATICO
  </h1>

  <p class="mt-6 text-xl text-cinematico-light font-inter max-w-2xl mx-auto">
    Made for the endlessly curious cinephile
  </p>

  <div class="mt-10 flex justify-center gap-4">
    <%= link_to "Get Started",
      new_user_registration_path,
      class: "px-8 py-4 bg-cinematico-gold text-black font-semibold rounded-lg hover:opacity-90 transition" %>
  </div>
</section>


<!-- FEATURES — Glass Cards -->
<section class="py-28 px-6">
  <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 text-white">
  <div class="glass p-6 rounded-xl border border-white/10">
    <h3 class="text-white font-semibold text-lg mb-2">Track Your Movies</h3>
    <p class="text-gray-300 text-sm">Log films with one click.</p>
  </div>

  <div class="glass p-6 rounded-xl border border-white/10">
    <h3 class="text-white font-semibold text-lg mb-2">Deep Viewing Stats</h3>
    <p class="text-gray-300 text-sm">Genres, decades, directors & more.</p>
  </div>

  <div class="glass p-6 rounded-xl border border-white/10">
    <h3 class="text-white font-semibold text-lg mb-2">Review Reactions</h3>
    <p class="text-gray-300 text-sm">Upvotes & downvotes, no clutter.</p>
  </div>

  <div class="glass p-6 rounded-xl border border-white/10">
    <h3 class="text-white font-semibold text-lg mb-2">Smart Recommendations</h3>
    <p class="text-gray-300 text-sm">Powered by your unique taste.</p>
  </div>


  </div>
</section>


<!-- TRENDING GRID — Frosted Glass Background -->
<section class="py-24 px-6 glass-thin max-w-7xl mx-auto text-white">
  <h2 class="font-cinzel text-4xl text-center mb-12">Trending Among Cinephiles</h2>

  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6 mx-auto">
    <% 8.times do %>
      <div>
        <div class="aspect-[2/3] bg-[rgba(255,255,255,0.08)] rounded-xl shadow-[0_8px_32px_rgba(0,0,0,0.4)]"></div>
        <p class="mt-3 text-sm font-medium text-cinematico-light">Movie Title</p>
      </div>
    <% end %>
  </div>
</section>


<!-- HOW IT WORKS — Glass Centered -->
<section class="py-24 px-6 text-white glass max-w-5xl mx-auto text-center">
  <h2 class="font-cinzel text-4xl mb-12">How It Works</h2>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
    <div>
      <div class="step-circle">1</div>
      <p class="mt-4 font-semibold text-xl">Create Profile</p>
    </div>

    <div>
      <div class="step-circle">2</div>
      <p class="mt-4 font-semibold text-xl">Add Films</p>
    </div>

    <div>
      <div class="step-circle">3</div>
      <p class="mt-4 font-semibold text-xl">View Insights</p>
    </div>
  </div>
</section>
