<div class="min-h-screen flex justify-center bg-cinematico-black p-6">
  <div class="glass max-w-lg w-full p-10">

    <h2 class="font-cinzel text-3xl text-cinematico-gold mb-6">Edit Profile</h2>

    <%= form_with model: @user, url: settings_profile_path do |f| %>

      <%= f.label :username, class: "block text-cinematico-light mb-1" %>
      <%= f.text_field :username, class: "w-full px-4 py-3 glass-thin text-white rounded-lg" %>

      <%= f.label :profile_public, "Public Profile", class: "block text-cinematico-light mt-6 mb-1" %>
      <%= f.check_box :profile_public %>

      <%= f.submit "Save Changes",
          class: "mt-8 w-full py-3 bg-cinematico-gold text-black font-semibold rounded-lg hover:opacity-90 transition" %>

    <% end %>

  </div>
</div>
