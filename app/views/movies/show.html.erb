<div class="min-h-screen pt-20 px-6 pb-12">
  <div class="max-w-7xl mx-auto">
    <% if @error %>
      <div class="text-center py-12">
        <h1 class="font-cinzel text-3xl text-cinematico-gold mb-4">Movie Not Found</h1>
        <p class="text-cinematico-grey"><%= @error %></p>
        <%= link_to "Back to Search", movies_path, class: "mt-4 inline-block px-6 py-2 bg-cinematico-gold text-cinematico-black font-semibold rounded-lg hover:bg-opacity-90 transition" %>
      </div>
    <% elsif @movie %>
      <div class="mb-8">
        <%= link_to "â† Back to Search", movies_path, class: "text-cinematico-gold hover:underline mb-4 inline-block" %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
        <div class="md:col-span-1">
          <% poster_url = @movie.poster_url %>
          <% is_placeholder = poster_is_placeholder?(poster_url) %>
          <div class="relative">
            <%= image_tag poster_url, 
                alt: is_placeholder ? "No Poster Available" : @movie.title,
                class: "w-full rounded-lg shadow-lg #{'poster-placeholder' if is_placeholder}",
                title: is_placeholder ? "No Poster Available" : @movie.title %>
            <% if is_placeholder %>
              <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
                <span class="text-cinematico-dark bg-cinematico-grey/50 px-2 py-1 rounded text-sm">No Poster Available</span>
              </div>
            <% end %>
          </div>
        </div>

        <div class="md:col-span-2">
          <div class="flex items-start justify-between mb-4">
            <div>
              <h1 class="font-cinzel text-4xl text-cinematico-gold"><%= @movie.title %></h1>
              <% if user_signed_in? %>
                <%# display how many times current user has logged this movie below the title %>
                <% watch_count = current_user.watch_history&.watch_logs&.where(movie_id: @movie.id)&.count || 0 %>
                <div class="mt-1 text-sm text-cinematico-light">Watch count: <strong class="text-white"><%= watch_count %></strong></div>
              <% end %>
            </div>

            <div class="flex items-center gap-2">
              <% if user_signed_in? %>
                <% watchlist_item = current_user.watchlist&.watchlist_items&.find_by(movie_id: @movie.id) %>
                <% if watchlist_item %>
                  <%= button_to "Remove from watchlist", watchlist_item_path(watchlist_item), method: :delete, class: "px-3 py-1 bg-red-600 text-white rounded hover:opacity-90 text-sm" %>
                <% else %>
                  <%= button_to "Add to Watchlist", watchlist_items_path, params: { movie_id: @movie.id }, method: :post, class: "px-3 py-1 bg-cinematico-gold text-cinematico-black rounded hover:opacity-90 text-sm" %>
                <% end %>
              <% end %>
            </div>
          </div>
          
          <% if user_signed_in? %>
            <div class="mb-6 relative inline-block text-left">
              <%= form_with url: list_list_items_path(list_id: 0), method: :post, class: "flex gap-2 items-center" do |f| %>
                <%= hidden_field_tag :movie_id, @movie.id %>
                <%= select_tag :selected_list_id, 
                    options_from_collection_for_select(current_user.lists, :id, :name), 
                    prompt: "Add to List...",
                    class: "bg-cinematico-dark text-white text-sm rounded border border-gray-700 px-3 py-2 focus:border-cinematico-gold focus:ring-1 focus:ring-cinematico-gold",
                    style: "background-color: #0b0b0f; color: #e5e5e5;" %>
                <%= f.submit "Add", class: "bg-cinematico-gold text-cinematico-black text-sm font-bold px-4 py-2 rounded hover:bg-yellow-500 cursor-pointer" %>
              <% end %>
            </div>
          <% end %>
          <div class="flex flex-wrap gap-4 mb-4 text-gray-300">
            <% if @movie.release_date %>
              <span><%= format_date(@movie.release_date) %></span>
            <% end %>
            <% if @movie.runtime %>
              <span><%= @movie.runtime %> min</span>
            <% end %>
            <% if @movie.genres.any? %>
              <div class="flex flex-wrap gap-2">
                <% @movie.genres.each do |genre| %>
                  <span class="px-2 py-1 bg-cinematico-dark rounded text-sm"><%= genre.name %></span>
                <% end %>
              </div>
            <% end %>
          </div>

          <% if @movie.overview.present? %>
            <div class="mb-6">
              <h2 class="font-semibold text-xl mb-2">Overview</h2>
              <p class="text-cinematico-light leading-relaxed"><%= @movie.overview %></p>
            </div>
          <% else %>
            <div class="mb-6">
            <p class="text-cinematico-white italic">No overview available.</p>
            </div>
          <% end %>

          <% if @movie.movie_people.where(role: "cast").any? %>
            <div class="mb-6">
              <h2 class="font-semibold text-xl mb-3">Cast</h2>
              <div class="flex flex-wrap gap-4">
                <% @movie.movie_people.where(role: "cast").limit(10).each do |mp| %>
                  <div class="text-center">
                    <% if mp.person.profile_path %>
                      <%= image_tag mp.person.profile_url, 
                          alt: mp.person.name, 
                          class: "w-20 h-20 rounded-full object-cover mb-2",
                          onerror: "this.style.display='none'" %>
                    <% end %>
                    <p class="text-sm text-white"><%= mp.person.name %></p>
                    <% if mp.character.present? %>
                      <p class="text-xs text-gray-300"><%= mp.character %></p>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <% directors = @movie.movie_people.where(role: "director") %>
          <% if directors.any? %>
            <div class="mt-6">
              <h2 class="font-semibold text-xl mb-3">Directors</h2>
              <div class="flex flex-wrap gap-4">
                <% directors.each do |mp| %>
                  <span class="text-white"><%= mp.person.name %></span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="mt-12 mb-12 border-t border-gray-800 pt-8">
        <div class="flex flex-col md:flex-row justify-between items-center mb-8">
          <h2 class="font-cinzel text-3xl text-cinematico-gold">Reviews</h2>
          
          <div class="flex gap-4 text-sm mt-4 md:mt-0">
          <%= link_to "Top Rated", movie_path(@movie, sort: 'top'), class: "px-4 py-2 rounded border #{params[:sort] != 'newest' ? 'border-cinematico-gold text-cinematico-gold bg-cinematico-gold/10' : 'border-gray-700 text-gray-200 hover:border-cinematico-gold transition'}", aria: { label: "Show top rated reviews" } %>
          <%= link_to "Newest", movie_path(@movie, sort: 'newest'), class: "px-4 py-2 rounded border #{params[:sort] == 'newest' ? 'border-cinematico-gold text-cinematico-gold bg-cinematico-gold/10' : 'border-gray-700 text-gray-200 hover:border-cinematico-gold transition'}", aria: { label: "Show newest reviews" } %>
          </div>
        </div>

        <% if user_signed_in? %>
          <div class="flex flex-col gap-6 mb-6">
            <div class="bg-cinematico-dark border border-gray-800 p-4 rounded-lg">
              <h3 class="text-lg font-semibold text-white mb-3">Log as Watched</h3>
              <%= form_with url: watch_histories_path, local: true do |f| %>
                <%= hidden_field_tag :movie_id, @movie.id %>
                <div class="mb-3">
                  <%= label_tag :watched_on, "Watched On", class: "block text-sm text-cinematico-white mb-1" %>
                  <%= date_field_tag :watched_on, Date.current, class: "w-full bg-cinematico-black border border-gray-700 rounded text-white px-3 py-2" %>
                </div>
                <%= f.submit "Log as Watched", class: "px-4 py-2 bg-cinematico-gold text-cinematico-black rounded font-semibold" %>
              <% end %>
            </div>

            <div class="bg-cinematico-dark border border-gray-800 p-6 rounded-lg mb-10 shadow-lg">
              <h3 class="text-xl font-cinzel text-white mb-4">Leave a Review</h3>
              <%= form_with(model: [@movie, @review], local: true, class: "space-y-4") do |f| %>
                <div>
                  <%= f.label :rating, "Rating (1-10)", class: "block text-sm font-medium text-gray-200 mb-1" %>
                  <%= f.number_field :rating, in: 1..10, class: "w-full md:w-32 bg-cinematico-black border border-gray-700 rounded text-white focus:border-cinematico-gold focus:ring-1 focus:ring-cinematico-gold px-3 py-2" %>
                </div>
                <div>
                  <%= f.label :body, "Your Thoughts", class: "block text-sm font-medium text-gray-200 mb-1" %>
              <%= f.text_area :body, rows: 3, placeholder: "What did you think of this movie?", class: "w-full bg-cinematico-black border border-gray-700 rounded text-cinematico-light placeholder-cinematico-light focus:border-cinematico-gold focus:ring-1 focus:ring-cinematico-gold px-3 py-2" %>
                </div>
                <%= f.submit "Post Review", class: "cursor-pointer px-6 py-2 bg-cinematico-gold text-cinematico-black font-bold rounded hover:bg-yellow-500 transition" %>
              <% end %>
            </div>
          </div>
        <% else %>
          <div class="bg-cinematico-dark border border-gray-800 p-6 rounded-lg mb-10 text-center">
            <p class="text-cinematico-white">Please <%= link_to "Sign In", new_user_session_path, class: "text-cinematico-gold hover:underline" %> to leave a review.</p>
          </div>
        <% end %>

        <div class="space-y-6">
          <% if @reviews.any? %>
            <%= render @reviews %>
          <% else %>
            <p class="text-cinematico-white italic text-center py-8">No reviews yet. Be the first to review!</p>
          <% end %>
        </div>
      </div>
      
      <div class="mt-12">
        <h2 class="font-cinzel text-3xl text-cinematico-gold mb-6">Similar Movies</h2>
        
        <% if @similar_movies.is_a?(Hash) && @similar_movies["error"] %>
          <div class="text-center py-8 bg-cinematico-dark rounded-lg border border-cinematico-grey">
            <p class="text-cinematico-white"><%= @similar_movies["error"] %></p>
          </div>
        <% elsif @similar_movies.empty? %>
          <div class="text-center py-8 bg-cinematico-dark rounded-lg border border-cinematico-grey">
            <p class="text-cinematico-white">No similar movies available at this time.</p>
          </div>
        <% else %>
          <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6">
            <% @similar_movies.each do |movie| %>
              <div class="group relative">
                <%= link_to movie_path(movie['id']), class: 'group block focus:outline-none focus-visible:ring-2 focus-visible:ring-cinematico-gold rounded-lg' do %>
                  <div class="relative overflow-hidden rounded-lg bg-cinematico-dark border border-cinematico-grey hover:border-cinematico-gold transition-all duration-300">
                    <% similar_poster_url = poster_url_for(movie['poster_path']) %>
                    <% similar_is_placeholder = poster_is_placeholder?(similar_poster_url) %>
                    <%= image_tag similar_poster_url, 
                        alt: similar_is_placeholder ? "No Poster Available" : movie['title'],
                        class: "w-full h-auto object-cover group-hover:scale-105 transition-transform duration-300 #{'poster-placeholder' if similar_is_placeholder}" %>
                    
                    <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-cinematico-black to-transparent p-3">
                      <h3 class="font-semibold text-white text-sm mb-1 line-clamp-2"><%= movie['title'] %></h3>
                    <% if movie['release_date'] %>
                      <p class="text-cinematico-light text-xs"><%= format_date(movie['release_date']) || "N/A" %></p>
                    <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
