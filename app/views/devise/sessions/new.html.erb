<div class="min-h-screen flex items-center justify-center p-6 app-shell">
  <div class="glass-dark max-w-md w-full p-10 relative z-10">

    <h2 class="text-3xl font-cinzel text-center text-cinematico-gold mb-6">Sign In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <%= f.label :email, class: "block text-cinematico-light mb-1" %>
      <%= f.email_field :email, class: "w-full px-4 py-3 rounded-lg glass-thin text-white" %>

      <%= f.label :password, class: "block text-cinematico-light mb-1 mt-6" %>
      <div class="relative">
        <%= f.password_field :password, class: "w-full px-4 py-3 rounded-lg glass-thin text-white pr-20", id: "session_password" %>
        <button type="button" data-toggle-password="#session_password" class="absolute inset-y-0 right-2 px-3 text-sm text-cinematico-gold hover:text-white">Show</button>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mt-4 flex items-center gap-2 text-sm text-gray-300">
          <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-white/30 bg-black/40" %>
          <%= f.label :remember_me, "Keep me logged in", class: "select-none" %>
        </div>
      <% end %>

      <%= f.submit "Sign In",
            class: "mt-8 w-full py-3 bg-cinematico-gold text-black font-semibold rounded-lg hover:opacity-90 transition" %>

    <% end %>

    <div class="mt-6 text-center">
      <%= link_to "Forgot your password?", new_password_path(resource_name),
                  class: "text-cinematico-gold hover:opacity-80 font-medium" %>
      <div class="mt-2">
        <%= link_to "Resend confirmation email", new_user_confirmation_path,
                    class: "text-cinematico-gold hover:opacity-80 font-medium" %>
      </div>
    </div>
  </div>
</div>
