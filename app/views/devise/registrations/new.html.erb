<div class="min-h-screen flex items-center justify-center p-6 bg-cinematico-black">
  <div class="glass-dark max-w-md w-full p-10">

    <h2 class="text-3xl font-cinzel text-center text-cinematico-gold mb-6">
      Create Your Account
    </h2>

    <%= render "devise/shared/error_messages", resource: resource %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <%= f.label :username, class: "block text-cinematico-light mb-1" %>
      <%= f.text_field :username, autofocus: true, class: "w-full px-4 py-3 rounded-lg glass-thin text-white" %>

      <%= f.label :email, class: "block text-cinematico-light mb-1 mt-6" %>
      <%= f.email_field :email, class: "w-full px-4 py-3 rounded-lg glass-thin text-white" %>

      <%= f.label :password, class: "block text-cinematico-light mb-1 mt-6" %>
      <%= f.password_field :password, class: "w-full px-4 py-3 rounded-lg glass-thin text-white" %>

      <%= f.submit "Create Account",
            class: "mt-8 w-full py-3 bg-cinematico-gold text-black font-semibold rounded-lg hover:opacity-90 transition" %>

    <% end %>

    <p class="mt-6 text-center">
      <%= link_to "Already have an account?", new_user_session_path %>
    </p>
  </div>
</div>
