<div class="min-h-screen flex items-center justify-center p-6 app-shell">
  <div class="glass-dark max-w-md w-full p-10 relative z-10">
    <h2 class="text-3xl font-cinzel text-center text-cinematico-gold mb-6">Resend Confirmation</h2>
    <p class="text-cinematico-light text-center mb-6 text-sm">Enter the email you used to sign up and weâ€™ll send you a new confirmation link.</p>

    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= f.label :email, class: "block text-cinematico-light mb-1" %>
      <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
                        class: "w-full px-4 py-3 rounded-lg glass-thin text-white" %>

      <%= f.submit "Send confirmation email",
            class: "mt-6 w-full py-3 bg-cinematico-gold text-black font-semibold rounded-lg hover:opacity-90 transition" %>
    <% end %>

    <div class="mt-6 text-center text-sm">
      <%= link_to "Back to sign in", new_session_path(resource_name), class: "text-cinematico-gold hover:opacity-80 font-medium" %>
    </div>
  </div>
</div>
