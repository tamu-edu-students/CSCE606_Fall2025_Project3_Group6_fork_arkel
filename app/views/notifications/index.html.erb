<div class="max-w-3xl mx-auto p-6">
  <h1 class="text-2xl font-semibold mb-4">Notifications</h1>

  <div class="mb-4">
    <%= button_to "Mark all read",
      mark_all_read_notifications_path,
      method: :post,
      remote: true,
      class: "px-3 py-1 bg-gray-700 text-white rounded" %>
  </div>

  <div class="space-y-2">
    <% @notifications.each do |n| %>
      <div class="p-3 rounded-md <%= 'bg-gray-800' if n.unread? %>">
        <div class="flex items-start justify-between gap-4">
          <div>
             <div class="text-sm">
               <strong><%= n.actor&.username || 'System' %></strong>
               <span class="text-gray-400">â€¢ <%= n.notification_type %></span>
             </div>
            <% if n.respond_to?(:body) && n.body.present? %>
              <div class="text-sm text-gray-300 mt-1"><%= n.body %></div>
            <% end %>
            <% if n.notifiable %>
              <div class="text-xs text-gray-500 mt-1">
                <% if n.notifiable.is_a?(Review) && n.notifiable.movie %>
                  <%= link_to "View review", movie_path(n.notifiable.movie), class: "underline" %>
                <% elsif n.notifiable.is_a?(Movie) %>
                  <%= link_to "View movie", movie_path(n.notifiable), class: "underline" %>
                <% end %>
              </div>
            <% end %>
          </div>

          <div class="text-xs text-gray-500">
            <%= time_ago_in_words(n.created_at) %> ago
            <% unless n.read? %>
              <%= button_to "Mark read",
                mark_read_notification_path(n),
                method: :post,
                remote: true,
                class: "ml-2 text-sm" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
